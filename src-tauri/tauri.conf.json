{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mandalaya",
  "version": "0.1.0",
  "identifier": "com.mandala-ya.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Maṇḍalāya — 曼荼羅盤",
        "width": 800,
        "height": 600,
        "minWidth": 640,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["mandala"],
        "name": "Mandala-ya.Chart",
        "description": "Mandala-ya Chart File",
        "mimeType": "application/x-mandala",
        "role": "Editor"
      }
    ]
  }
}
